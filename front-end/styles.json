{
  "meta": {
    "name": "TartanHacks Styling Guide",
    "platform": "web",
    "version": "3.0.0"
  },

  "font": {
    "family": "Inter, sans-serif",
    "import": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap",
    "weights": { "regular": 400, "medium": 500, "semibold": 600, "bold": 700 }
  },

  "liquidGlass": {
    "RESTRICTION": "ONLY use on landing page. Never on dashboard, settings, profile, or authenticated pages.",
    "css": {
      "container": {
        "position": "relative",
        "border-radius": "28px",
        "isolation": "isolate",
        "border": "1px solid rgba(0,0,0,0.08)",
        "box-shadow": "0 8px 32px rgba(0,0,0,0.08), 0 2px 8px rgba(0,0,0,0.04)",
        "overflow": "hidden"
      },
      "frostLayer": {
        "selector": "::before",
        "content": "''",
        "position": "absolute",
        "inset": "0",
        "z-index": "-2",
        "backdrop-filter": "blur(4px)",
        "filter": "url(#glass-distortion)"
      },
      "tintLayer": {
        "selector": "::after",
        "content": "''",
        "position": "absolute",
        "inset": "0",
        "z-index": "-1",
        "background": "linear-gradient(135deg, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0.4) 40%, rgba(255,255,255,0.2) 60%), rgba(255,255,255,0.5)",
        "box-shadow": "inset 0 1px 0 rgba(255,255,255,0.8), inset 0 -1px 0 rgba(0,0,0,0.03)"
      }
    },
    "svgFilter": {
      "id": "glass-distortion",
      "feTurbulence": { "type": "fractalNoise", "baseFrequency": "0.004", "numOctaves": 4 },
      "feGaussianBlur": { "stdDeviation": 3 },
      "feDisplacementMap": { "scale": 60 }
    },
    "tints": {
      "default": "255,255,255",
      "accent": "99,102,241",
      "success": "34,197,94",
      "danger": "239,68,68",
      "warning": "251,146,60"
    }
  },

  "components": {
    "button": {
      "base": {
        "font-family": "Inter, sans-serif",
        "font-weight": 600,
        "border-radius": "12px",
        "cursor": "pointer",
        "transition": "all 0.2s ease"
      },
      "sizes": {
        "sm": { "padding": "8px 16px", "font-size": "14px" },
        "md": { "padding": "12px 24px", "font-size": "16px" },
        "lg": { "padding": "0 24px", "height": "56px", "font-size": "16px" }
      },
      "variants": {
        "primary": { "background": "#000", "color": "#fff", "border": "none", "box-shadow": "0 4px 0 #000" },
        "secondary": { "background": "transparent", "color": "#000", "border": "1px solid #E7ECF2", "box-shadow": "0 4px 0 #E7ECF2" },
        "cta": { "background": "#A94438", "color": "#fff", "border": "1px solid #7c3232", "box-shadow": "0 3px 0 #7c3232" }
      },
      "states": {
        "hover": { "opacity": "0.8" },
        "active": { "opacity": "0.7", "transform": "translateY(2px)" },
        "disabled": { "opacity": "0.5", "cursor": "not-allowed" }
      }
    },
    "card": {
      "base": {
        "background": "#fff",
        "border": "1px solid #E7ECF2",
        "border-radius": "12px",
        "padding": "20px",
        "box-shadow": "0 4px 0 #E7ECF2"
      },
      "sizes": {
        "default": { "border-radius": "12px", "padding": "20px" },
        "large": { "border-radius": "16px", "padding": "24px" },
        "xlarge": { "border-radius": "25px", "padding": "48px" }
      }
    },
    "input": {
      "base": {
        "font-family": "Inter, sans-serif",
        "font-size": "16px",
        "border": "1px solid #E7ECF2",
        "border-radius": "10px",
        "padding": "16px"
      },
      "states": {
        "focus": { "border-color": "#000", "outline": "none" },
        "error": { "border-color": "#EF4444" }
      }
    }
  },

  "typography": {
    "h1": {
      "font-weight": 600,
      "letter-spacing": "-0.02em",
      "line-height": 1.0,
      "font-size": { "mobile": "40px", "tablet": "60px", "desktop": "80px" }
    },
    "h2": {
      "font-weight": 600,
      "letter-spacing": "-0.01em",
      "line-height": 1.33,
      "font-size": { "mobile": "32px", "tablet": "40px", "desktop": "48px" }
    },
    "h3": {
      "font-weight": 600,
      "line-height": 1.33,
      "font-size": { "mobile": "24px", "tablet": "28px", "desktop": "32px" }
    },
    "h4": {
      "font-weight": 500,
      "line-height": 1.33,
      "font-size": { "mobile": "18px", "tablet": "20px", "desktop": "24px" }
    },
    "body": {
      "font-weight": 400,
      "line-height": 1.6,
      "font-size": { "mobile": "14px", "tablet": "16px" }
    },
    "bodyLarge": {
      "font-weight": 400,
      "line-height": 1.33,
      "font-size": { "mobile": "16px", "tablet": "18px" }
    },
    "small": { "font-size": "14px", "line-height": 1.5, "font-weight": 400 },
    "caption": { "font-size": "12px", "line-height": 1.5, "font-weight": 400 }
  },

  "spacing": {
    "xxs": "2px",
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "base": "16px",
    "lg": "20px",
    "xl": "24px",
    "2xl": "32px",
    "3xl": "48px",
    "4xl": "64px",
    "5xl": "88px",
    "6xl": "108px"
  },

  "borderRadius": {
    "sm": "4px",
    "md": "8px",
    "lg": "10px",
    "xl": "12px",
    "2xl": "16px",
    "3xl": "25px",
    "4xl": "31px",
    "full": "9999px"
  },

  "layout": {
    "containerMaxWidth": "1180px",
    "containerPadding": { "mobile": "24px", "tablet": "48px", "desktop": "80px" },
    "sectionSpacing": { "mobile": "48px", "tablet": "68px", "desktop": "88px" },
    "gridGap": { "small": "16px", "medium": "24px", "large": "32px" },
    "gridColumns": { "mobile": 1, "tablet": 2, "desktop": 3, "wide": 4 }
  },

  "breakpoints": {
    "sm": "640px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1280px"
  },

  "colors": {
    "landingPage": {
      "background": "#F9FAFB",
      "surface": "#fff",
      "border": "#E7ECF2",
      "text": "#000",
      "textSecondary": "rgba(0,0,0,0.8)",
      "textMuted": "rgba(0,0,0,0.5)"
    },
    "internalPages": {
      "background": "#fff",
      "surface": "#F9FAFB",
      "border": "#E7ECF2",
      "text": "#000",
      "textSecondary": "rgba(0,0,0,0.8)",
      "textMuted": "rgba(0,0,0,0.5)"
    },
    "semantic": {
      "accent": "#6366F1",
      "success": "#22C55E",
      "danger": "#EF4444",
      "warning": "#FB923C",
      "cta": "#A94438"
    }
  },

  "animation": {
    "duration": { "fast": "150ms", "normal": "200ms", "slow": "300ms" },
    "easing": { "default": "ease-out", "spring": "cubic-bezier(0.16,1,0.3,1)" }
  },

  "rules": {
    "landingPage": [
      "Use light background (#F9FAFB)",
      "Include SVG filter for glass distortion",
      "Apply liquidGlass styles to containers",
      "Use dark text colors (#000)"
    ],
    "internalPages": [
      "Use light background (#fff or #F9FAFB)",
      "NO glass effects or backdrop-filter",
      "Use solid box-shadows (0 blur)",
      "Use dark text colors (#000)"
    ]
  }
}
